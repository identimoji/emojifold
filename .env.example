# EmojiFold Environment Configuration

# Ollama API Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30

# HuggingFace Configuration  
HF_HOME=./.hf_cache
HF_TOKEN=your_hf_token_here_if_needed

# Processing Configuration
MAX_CONCURRENT_REQUESTS=10
BATCH_SIZE=64
PROGRESS_UPDATE_INTERVAL=100

# Storage Configuration
DATABASE_PATH=./data/emojifold.db
RESULTS_DIR=./results
CACHE_DIR=./.cache

# Hardware Optimization
# Set to 'cuda' for 4090, 'mps' for M2 Ultra, 'cpu' for fallback
DEVICE=mps
MAX_WORKERS=8

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/emojifold.log
